<% layout('./layouts/boilerplate.ejs') -%>
<body>
    
    <div class="row">
        <h2 class="offset-1">Create new listing</h2>
        <form action="http://localhost:8080/listings" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="mb-3 col-8 offset-1">
                <label for="title">Title </label>
                <input type="text" name="listing[title]" placeholder="Enter title" id="title" class="form-control" required>
                <div class="invalid-feedback">Please enter a valid title</div>
            </div>
            
            <div class="mb-3 col-8 offset-1">
                <label for="lis-img">Upload image </label>
                <input type="file" placeholder="Upload image" name="listing-image" id="lis-img" class="form-control" required>
            </div>

            <div class="mb-3 col-8 offset-1">
                <label for="category">Category </label>
                <select name="listing[category]" id="category" class="form-control" required>
                    <option value="" selected disabled>Select a category</option>
                    <option value="farms">Farms</option>
                    <option value="rooms">Rooms</option>
                    <option value="tropical">Tropical</option>
                    <option value="pool">Pool</option>
                    <option value="Treehouses">Treehouses</option>
                    <option value="castle">Castle</option>
                    <option value="boat">Boat</option>
                    <option value="trending">Trending</option>
                    <option value="Arctic">Arctic</option>
                    <option value="mansion">Mansion</option>
                </select>
                <div class="invalid-feedback">Please select a valid category</div>
            </div>
            
            <div class="mb-3 col-8 offset-1">
                <label for="desc">Description </label>
                <textarea name="listing[description]" placeholder="Enter description" id="desc" class="form-control" required></textarea>
                <div class="invalid-feedback">Please enter a valid description</div>
            </div>
            
            <div class="col-8 mb-3 offset-1"> 
                <div class="row">
                    <div class="col-md-4">
                        <label for="price">Price </label>
                        <input type="number" name="listing[price]" placeholder="Enter price" id="price" class="form-control" required>
                        <div class="invalid-feedback">Please enter a valid price</div>
                    </div>
                    
                    <div class="col-md-8">
                        <label for="location">Location </label>
                        <input type="text" name="listing[location]" placeholder="Enter location" id="location" class="form-control" required>
                        <div class="invalid-feedback">Please enter a valid location</div>
                    </div>
                </div>
            </div>
            
            <div class="mb-3 col-8 offset-1">
                <label for="country">Country </label>
                <input type="text" name="listing[country]" placeholder="Enter country" id="country" class="form-control" required>
                <div class="invalid-feedback">Please enter a valid country</div>
            </div>
            
            <button class="col offset-1 btn btn-danger button-color">Create</button>
    
        </form>
    </div>
    
</body>
